{
  "name": "payroo-web",
  "version": "1.0.0",
  "description": "Payroo Mini Payrun Web App - React TypeScript frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
